<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <h1>Students Page</h1>

    <% students.forEach((oneStudent)=>{ %>

        <a href="/students/<%= oneStudent.id %>">
            <li><%= oneStudent.studentName  %> and city is <%= oneStudent.country %></li>
        </a>
      
        <% if(oneStudent.country === "Bahrain"){%>
            <img style="height:20px; width:20px; margin-bottom:40px" src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2c/Flag_of_Bahrain.svg/640px-Flag_of_Bahrain.svg.png" alt="bahrain-flag">
        <%}%>

        
    <%})%>
</body>
</html>